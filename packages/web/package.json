{
  "name": "@addi-check/web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "formik": "^1.5.8",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "react-transition-group": "^4.2.1",
    "sweetalert2-react": "^0.8.2",
    "typescript": "3.5.2",
    "uuid": "^3.3.2",
    "yup": "^0.27.0"
  },
  "scripts": {
    "build:css": "postcss src/main.css -o src/index.css",
    "watch:css": "postcss src/main.css -o src/index.css -w",
    "mock:generate": "node scripts/generateMockData",
    "start": "yarn run watch:css & react-scripts start",
    "build": "yarn run mock:generate && yarn run build:css & react-scripts build",
    "test": "react-scripts test --env=jsdom --transformIgnorePatterns",
    "test:nowatch": "CI=true react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "update": "../../node_modules/npm-check-updates/bin/ncu -u && yarn"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@types/jest": "24.0.15",
    "@types/node": "12.0.10",
    "@types/ramda": "^0.26.14",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "@types/react-router-dom": "^4.3.4",
    "@types/react-transition-group": "^2.9.2",
    "@types/uuid": "^3.4.5",
    "@types/yup": "^0.26.22",
    "autoprefixer": "^9.6.0",
    "faker": "^4.1.0",
    "fs": "^0.0.1-security",
    "json-schema-faker": "^0.5.0-rc17",
    "postcss-cli": "^6.1.2",
    "require-all": "^3.0.0",
    "tailwindcss": "^1.0.4"
  }
}
